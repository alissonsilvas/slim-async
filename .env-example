# =====================================================
#   Slim + Swoole + MongoDB - Arquivo de Exemplo (.env)
# =====================================================

# Ambiente de execução
APP_NAME=SlimSwooleApp
APP_ENV=local
APP_DEBUG=true
APP_PORT=9501

# -----------------------------------------------------
# Configuração do MongoDB
# -----------------------------------------------------
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=meubanco
MONGO_USERNAME=
MONGO_PASSWORD=

# -----------------------------------------------------
# Logs e Debug
# -----------------------------------------------------
LOG_CHANNEL=stdout
LOG_LEVEL=debug

# -----------------------------------------------------
# Swoole Config
# -----------------------------------------------------
SWOOLE_WORKER_NUM=4
SWOOLE_MAX_REQUEST=5000
SWOOLE_COROUTINE_HOOKS=ALL

# -----------------------------------------------------
# Outras configurações (customizáveis)
# -----------------------------------------------------
# TIMEZONE=America/Fortaleza
# CACHE_DRIVER=array